<?xml version="1.0" encoding="UTF-8"?>
<server description="new server">

    <featureManager>
        <feature>jakartaee-8.0</feature>
        <feature>microProfile-4.1</feature>
        <feature>jwt-1.0</feature>
    </featureManager>

    <variable name="default.http.port" defaultValue="13126"/>
    <variable name="default.https.port" defaultValue="9444"/>
    <variable name="app.context.root" defaultValue="/"/>

    <httpEndpoint
            host="*"
            httpPort="${default.http.port}"
            httpsPort="${default.https.port}"
            id="defaultHttpEndpoint"
    />
    <applicationManager autoExpand="true"/>

    <!-- <keyStore id="cpr22sKS" password="cpr22s" location="cprJwtKey.p12"/> -->
    <!-- <jwtBuilder expiresInSeconds="600" id="cpr22s" issuer="https://localhost:13126" keyStoreRef="cpr22sKS"  /> -->
    <!-- <jwtBuilder expiresInSeconds="600" id="cpr22s" issuer="https://localhost:13126" jwkEnabled="true" /> -->

    <webApplication contextRoot="${app.context.root}" location="login-microservice.war" />
        
    <ssl id="defaultSSLConfig" trustDefaultCerts="true"/>
    <cors domain="/"
          allowedOrigins="*"
          allowedMethods="GET, POST, DELETE, PUT"
          allowCredentials="true"
          exposeHeaders="MyHeader"
    />
</server>
